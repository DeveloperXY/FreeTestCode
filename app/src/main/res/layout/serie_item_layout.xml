<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:costum="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:alpha="0.8"
              android:background="@color/serieItemColor"
              android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:padding="4dp"
        android:gravity="center">

        <com.octagen.customviews.CustomTextView
            android:id="@+id/serieID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_ellipse"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            costum:Font="cent.TTF"
            costum:Size="24"/>

    </RelativeLayout>

    <com.octagen.customviews.CustomTextView
        android:id="@+id/serieLabel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:gravity="center"
        android:text="Serie 1"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        costum:Font="cent.TTF"
        costum:Size="16"/>

    <com.octagen.customviews.CustomTextView
        android:id="@+id/ratingLabel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:gravity="center"
        android:text="18/40"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold"
        costum:Font="cent.TTF"
        costum:Size="12"/>

</LinearLayout>