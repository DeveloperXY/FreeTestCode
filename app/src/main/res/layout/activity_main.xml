<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:costum="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_background"/>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">

        </RelativeLayout>

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:src="@drawable/ic_home"/>

        <com.octagen.customviews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:layout_weight="10"
            android:gravity="center"
            android:textColor="#000000"
            costum:Font="cent.TTF"
            costum:Frensh="Free Test Code"
            costum:Size="28"
            tools:text="Free Test Code"
            tools:textSize="28sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="32dp"
            android:layout_weight="50"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="50"
                    android:alpha="0.8"
                    android:background="@drawable/home_menu_item_red"
                    android:clickable="true"
                    android:onClick="onMotocycle"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/motocycleImage"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="36dp"
                        android:layout_weight="70"
                        android:src="@drawable/ic_motorcycle"/>

                    <com.octagen.customviews.CustomTextView
                        android:id="@+id/motocycleLabel"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:gravity="center"
                        android:textColor="#000000"
                        costum:Font="cent.TTF"
                        costum:Frensh="A: Motocycle"
                        costum:Size="16"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:alpha="0.8"
                    android:background="@drawable/home_menu_item_red"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/vehicleImage"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="36dp"
                        android:layout_weight="70"
                        android:src="@drawable/ic_vehicle"/>

                    <com.octagen.customviews.CustomTextView
                        android:id="@+id/vehicleLabel"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:gravity="center"
                        android:textColor="#000000"
                        costum:Font="cent.TTF"
                        costum:Frensh="B: VÃ©hicule"
                        costum:Size="16"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="20"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="50"
                    android:alpha="0.8"
                    android:background="@drawable/home_menu_item_yellow"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/camionImage"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="36dp"
                        android:layout_weight="70"
                        android:src="@drawable/ic_camion"/>

                    <com.octagen.customviews.CustomTextView
                        android:id="@+id/camionLabel"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:gravity="center"
                        android:textColor="#000000"
                        costum:Font="cent.TTF"
                        costum:Frensh="C/CE: Camion"
                        costum:Size="16"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:alpha="0.8"
                    android:background="@drawable/home_menu_item_yellow"
                    android:clickable="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/busImage"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginRight="36dp"
                        android:layout_weight="70"
                        android:src="@drawable/ic_bus"/>

                    <com.octagen.customviews.CustomTextView
                        android:id="@+id/busLabel"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="30"
                        android:gravity="center"
                        android:textColor="#000000"
                        costum:Font="cent.TTF"
                        costum:Frensh="D: Bus"
                        costum:Size="16"/>

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/historyButton"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight="10"
                android:background="@drawable/history_btn_background"
                android:text="Historique"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:background="@color/red">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:background="@color/yellow"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33"
            android:background="@color/green"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/settings"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_settings"/>

</RelativeLayout>
